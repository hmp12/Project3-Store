    if (!empty($_POST['type'])) {
		$type = $_POST['type'];
	}
	else {
		$type = '';
	}
	if (!empty($_POST['branch'])) {
		$branch = $_POST['branch'];
	}
	else {
		$branch = '';
	}
	if (!empty($_POST['price'])) {
		$price = $_POST['price'];
		if ($price > 3) {
			$lprice = 3*5000000;
			$rprice = 100*5000000;
		}
		else {
			$lprice = ($price-1)*5000000;
			$rprice = $price*5000000;
		}
	}
	else {
		$lprice = 0;
		$rprice = 100*5000000;
	}
	if (!empty($_POST['os'])) {
		$os = $_POST['os'];
	}
	if (!empty($_POST['display'])) {
		$display = $_POST['display'];
	}
	if (!empty($_POST['ram'])) {
		$ram = $_POST['ram'];
		if ($ram > 3) {
			$lram = 3*2;
			$rram = 100*2;
		}
		else {
			$lram = ($ram-1)*2;
			$rram = $ram*2;
		}
	}
	else {
		$lram = 0;
		$rram = 9;
	}
	if (!empty($_POST['cam'])) {
		$cam = $_POST['cam'];
		if ($cam > 3) {
			$lcam = 3*5;
			$rcam = 99;
		}
		else {
			$lcam = ($cam-1)*5;
			$rcam = $cam*5;
		}
	}
	else {
		$lcam = 0;
		$rcam = 99;
	}
	if ($lcam < 10) {
		$lcam = '0'.$lcam;
	}
	if (!empty($_POST['sort'])) {
		$sort = $_POST['sort'];
	}
	else {
		$sort = 'null';
	}